<?xml version="1.0" encoding="UTF-8"?>
<settings   xmlns="http://maven.apache.org/SETTINGS/1.0.0" 
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>

        <server>
            <id>sonatype-central</id>
            <username>R4ncrpkA</username>
            <password>${env.OSS_SONATYPE_TOKEN}</password>
        </server>

        <server>
            <id>github</id>
            <username>bsorrentino</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>

    </servers>

    <profiles>

        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <release.repo.id>central-portal</release.repo.id>
                <release.repo.url>https://central.sonatype.com/</release.repo.url>
                <snapshot.repo.id>central-portal-snapshots</snapshot.repo.id>
                <snapshot.repo.url>https://central.sonatype.com/repository/maven-snapshots/</snapshot.repo.url>
            </properties>


            <repositories>
                <repository>
                    <name>Central Portal</name>
                    <id>central-portal</id>
                    <url>https://central.sonatype.com/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <repository>
                    <id>spring-snapshots</id>
                    <name>Spring Snapshots</name>
                    <url>https://repo.spring.io/snapshot</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>

                <repository>
                    <name>Central Portal Snapshots</name>
                    <id>central-portal-snapshots</id>
                    <url>https://central.sonatype.com/repository/maven-snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>

    </profiles>

</settings>
